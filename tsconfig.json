{
  "compilerOptions": {
    "target": "ES2015",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    //"lib" : ["es2015", "dom"],
    //"lib": ["dom"],
    "removeComments": false,
    "noImplicitAny": false,
    "baseUrl": ".",
    "paths": {
      "*": ["*"]
    }
  },
  "exclude": [
    "node_modules"
  ]
}